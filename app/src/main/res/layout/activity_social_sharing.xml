<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Overview Section -->
    <TextView
        android:id="@+id/overview_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share your experience"
        android:textSize="18sp"
        android:paddingBottom="16dp" />

    <!-- Post Creation Field -->
    <EditText
        android:id="@+id/post_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/overview_text"
        android:hint="Write your post here"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:minLines="4"
        android:maxLines="6" />

    <!-- Sharing Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_field"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/email_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share via Email" />

        <Button
            android:id="@+id/twitter_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share on Twitter" />

        <Button
            android:id="@+id/facebook_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share on Facebook" />
    </LinearLayout>
</RelativeLayout>
